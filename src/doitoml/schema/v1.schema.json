{
  "$id": "https://doitoml.rtfd.io/en/latest/schema/v1.schema.json",
  "$ref": "#/definitions/config",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "config": {
      "description": "schema for ``doitoml`` configuration",
      "type": "object",
      "required": ["tasks", "cmd", "env", "paths"],
      "properties": {
        "tasks": {
          "$ref": "#/definitions/tasks",
          "description": "named tasks"
        },
        "cmd": {
          "$ref": "#/definitions/cmd",
          "description": "named command tokens"
        },
        "env": {
          "$ref": "#/definitions/env",
          "description": "environment variables"
        },
        "paths": {
          "$ref": "#/definitions/paths",
          "description": "named paths"
        }
      }
    },
    "array-of-strings": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tasks": {
      "patternProperties": {
        "[^=\\s]+": {
          "$ref": "#/definitions/task"
        }
      }
    },
    "task": {
      "type": "object"
    },
    "cmd": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/array-of-strings"
      }
    },
    "env": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "paths": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/array-of-strings"
      }
    }
  }
}
