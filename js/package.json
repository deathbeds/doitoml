{
  "name": "@deathbeds/doitoml",
  "version": "0.0.0",
  "private": true,
  "devDependencies": {
    "prettier": "^2.8.7",
    "prettier-plugin-sort-json": "^1.0.0"
  },
  "prettier": {
    "printWidth": 88,
    "proseWrap": "always"
  },
  "doitoml": {
    "prefix": "js",
    "paths": {
      "all_prettier": [
        ":glob::.::*.yml::*.json",
        ":glob::..::*.md::*.json::*.yml",
        ":glob::../.binder::*.yml",
        ":glob::../examples::*/*.json",
        ":rglob::../lite::*.json::*.yml",
        ":rglob::../.github::*.yml::*.md",
        ":rglob::../docs::*.md::*.html::*.yml::*.css::*.mjs::!ipynb_checkpoints"
      ],
      "yarn_in": [
        ":glob::.::yarn.lock"
      ],
      "yarn_out": [
        ".yarn/install-state.gz"
      ],
      "prettier_ignore": [
        ".prettierignore"
      ]
    },
    "tokens": {
      "prettier": [
        "yarn",
        "prettier",
        "--config=package.json",
        "--list-different",
        "--cache",
        "--cache-location=../build/.cache/prettier"
      ]
    },
    "tasks": {
      "setup": {
        "uptodate": [
          {
            "config_changed": [
              ":get::json::package.json::devDependencies"
            ]
          }
        ],
        "file_dep": [
          "::yarn_in"
        ],
        "targets": [
          "::yarn_out"
        ],
        "actions": [
          "yarn"
        ]
      },
      "fix": {
        "prettier": {
          "file_dep": [
            "::all_prettier",
            "::yarn_out"
          ],
          "actions": [
            [
              "::prettier",
              "--ignore-path",
              "::prettier_ignore",
              "--write",
              "::all_prettier"
            ]
          ]
        }
      },
      "lint": {
        "prettier": {
          "file_dep": [
            "::all_prettier",
            "::yarn_out"
          ],
          "actions": [
            [
              "::prettier",
              "--ignore-path",
              "::prettier_ignore",
              "::all_prettier"
            ]
          ]
        }
      }
    }
  }
}
